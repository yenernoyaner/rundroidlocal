<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syyazilim.runout"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.syyazilim.runout.RegistrationActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.syyazilim.runout.MainActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.syyazilim.runout.SettingsActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.syyazilim.runout.AnimationActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.syyazilim.runout.ResultActivity"
            android:label="@string/app_name" />

        <activity android:name="com.syyazilim.runout.CountDownActivity"
            android:theme="@style/Theme.D1NoTitleDim"></activity>
    </application>

</manifest>