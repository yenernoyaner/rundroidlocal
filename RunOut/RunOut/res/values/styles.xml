<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionMenuTextColor">#2aa4cd</item>
        <item name="android:backgroundStacked">#2aa4cd</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#2aa4cd</item>
    </style>

    <style name="main_text_sublabel">
        <item name="android:textSize">10sp</item>

        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_text_counters">
        <item name="android:textColor">#00BFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_text_calorie_sub_label">
        <item name="android:textSize">10sp</item>

        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="main_text_calorie_counter">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#00BFFF</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="result_text_result_message">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="main_start_button">
        <item name="android:background">#04B404</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="main_pause_button">
        <item name="android:background">#ffff7300</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="main_stop_button">
        <item name="android:background">#D94159</item>
        <!--item name="android:background">#ffff0013</item-->
        <item name="android:visibility">invisible</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="main_resume_button">
        <item name="android:background">#04B404</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="separator10dp">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="separator20dp">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="result_save_button">
        <item name="android:background">#04B404</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="result_cancel_button">
        <item name="android:background">#ffff0013</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.D1NoTitleDim" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>